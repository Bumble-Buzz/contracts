{
  "name": "contracts",
  "version": "0.1.0",
  "description": "BumbleBuzz NFT Marketplace EXM smart contracts",
  "private": true,
  "scripts": {
    "package-lock": "npm i --package-lock-only",
    "hh-compile": "npx hardhat compile",
    "hh-size": "npx hardhat size-contracts",
    "hh-test": "npx hardhat test",
    "hh-test-ropsten": "npx hardhat test --network ropsten",
    "hh-node": "npx hardhat node",
    "hh-deploy": "npx hardhat run scripts/deploy.js --network localhost",
    "hh-deploy-aurora": "npx hardhat run scripts/deploy.js --network aurora",
    "hh-deploy-testnet": "npx hardhat run scripts/deploy.js --network testnet_aurora",
    "hh-deploy-ropsten": "npx hardhat run scripts/deploy.js --network ropsten",
    "hh-deploy-localGeth": "rm -fr .openzeppelin && npx hardhat run scripts/deploy.js --network localGeth",
    "hh-verify": "npx hardhat verify",
    "hh-verify-aurora": "npx hardhat verify --network aurora",
    "hh-verify-testnet_aurora": "npx hardhat verify --network testnet_aurora",
    "hh-verify-ropsten": "npx hardhat verify --network ropsten"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.3.2",
    "@openzeppelin/contracts-upgradeable": "^4.4.1",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "chai": "^4.3.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.6.4",
    "hardhat-contract-sizer": "^2.1.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "chai-as-promised": "^7.1.1",
    "eslint": "7.32.0",
    "keythereum": "^1.2.0",
    "lodash": "^4.17.21"
  }
}
